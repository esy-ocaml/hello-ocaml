{
  "name": "esy-ocaml-project",
  "version": "0.1.0",
  "description": "OCaml workflow with esy",
  "license": "MIT",
  "esy": {
    "build": [
      "make all",
      "rm -rf $cur__lib/$cur__name",
      "ocamlfind install $cur__name $cur__target_dir/META"
    ]
  },
  "scripts": {
    "build": "esy build",
    "shell": "esy shell",
    "clean": "esy clean",
    "repl": "esy utop",
    "editor": "esy $EDITOR",
    "test": "echo 'No tests but that is ok for now...'"
  },
  "dependencies": {
    "@opam/lambda-term": "*",
    "@opam/merlin": "*",
    "@opam/ocp-indent": "^1.5.3",
    "@opam/solvuu-build": "*",
    "@opam/utop": "*"
  },
  "peerDependencies": {
    "ocaml": "andreypopp/ocaml#esy"
  },
  "devDependencies": {
    "esy": "jordwalke/esy#allow-cur-root-writes",
    "ocaml": "andreypopp/ocaml#esy"
  }
}
